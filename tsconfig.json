{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2021",
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "incremental": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["./node_modules/*"],
      "@app": ["./src"],
      "@app/*": ["./src/*"]
    },
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["./src/**/*", "./@types/**/*"]
}
